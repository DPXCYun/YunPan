{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nexport default {\n  data() {\n    return {\n      email: '',\n      loading: false\n    };\n  },\n  methods: {\n    sendResetLink() {\n      if (!this.email || !this.email.includes('@')) {\n        this.$message.warning('请输入有效的邮箱');\n        return;\n      }\n      this.loading = true;\n      // 调用后端接口：发送密码重置邮件\n      this.axios.post('http://localhost:8989/forgotPassword', {\n        email: this.email\n      }).then(res => {\n        if (res.data.success) {\n          this.$message.success('重置链接已发送至您的邮箱，请查收！');\n          // 可选：3秒后自动跳回登录页\n          setTimeout(() => this.$router.push('/Login'), 3000);\n        } else {\n          this.$message.error(res.data.message || '发送失败');\n        }\n      }).catch(err => {\n        this.$message.error('网络错误，请稍后重试');\n        console.error(err);\n      }).finally(() => {\n        this.loading = false;\n      });\n    }\n  }\n};","map":{"version":3,"mappings":";AAmBA;EACAA;IACA;MACAC;MACAC;IACA;EACA;EACAC;IACAC;MACA;QACA;QACA;MACA;MACA;MACA;MACA;QACAH;MACA;QACA;UACA;UACA;UACAI;QACA;UACA;QACA;MACA;QACA;QACAC;MACA;QACA;MACA;IACA;EACA;AACA","names":["data","email","loading","methods","sendResetLink","setTimeout","console"],"sourceRoot":"src/views/ForgetPassword","sources":["ForgetPassword.vue"],"sourcesContent":["<!-- src/views/ForgetPassword.vue -->\r\n<template>\r\n  <div class=\"forget-container\">\r\n    <h2>找回密码</h2>\r\n    <el-form label-width=\"80px\" style=\"max-width: 400px; margin: 20px auto;\">\r\n      <el-form-item label=\"邮箱\">\r\n        <el-input v-model=\"email\" placeholder=\"请输入注册邮箱\"></el-input>\r\n      </el-form-item>\r\n      <el-form-item>\r\n        <el-button type=\"primary\" @click=\"sendResetLink\" :loading=\"loading\">\r\n          发送重置链接\r\n        </el-button>\r\n      </el-form-item>\r\n    </el-form>\r\n    <el-button @click=\"$router.back()\">返回登录</el-button>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nexport default {\r\n  data() {\r\n    return {\r\n      email: '',\r\n      loading: false\r\n    }\r\n  },\r\n  methods: {\r\n    sendResetLink() {\r\n      if (!this.email || !this.email.includes('@')) {\r\n        this.$message.warning('请输入有效的邮箱');\r\n        return;\r\n      }\r\n      this.loading = true;\r\n      // 调用后端接口：发送密码重置邮件\r\n      this.axios.post('http://localhost:8989/forgotPassword', {\r\n        email: this.email\r\n      }).then(res => {\r\n        if (res.data.success) {\r\n          this.$message.success('重置链接已发送至您的邮箱，请查收！');\r\n          // 可选：3秒后自动跳回登录页\r\n          setTimeout(() => this.$router.push('/Login'), 3000);\r\n        } else {\r\n          this.$message.error(res.data.message || '发送失败');\r\n        }\r\n      }).catch(err => {\r\n        this.$message.error('网络错误，请稍后重试');\r\n        console.error(err);\r\n      }).finally(() => {\r\n        this.loading = false;\r\n      });\r\n    }\r\n  }\r\n}\r\n</script>\r\n\r\n<style scoped>\r\n.forget-container {\r\n  width: 100vw;\r\n  height: 100vh;\r\n  display: flex;\r\n  flex-direction: column;\r\n  align-items: center;\r\n  justify-content: center;\r\n  background: #f5f5f5;\r\n}\r\n</style>"]},"metadata":{},"sourceType":"module"}